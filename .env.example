# CivicShield Platform Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/civicshield
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=civicshield
DATABASE_USER=civicshield_user
DATABASE_PASSWORD=civicshield_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Application Configuration
SECRET_KEY=your_secret_key_here
DEBUG=True
LOG_LEVEL=INFO

# Security Configuration
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
SESSION_TIMEOUT=1800

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000

# External Service Configuration
MAPBOX_API_KEY=your_mapbox_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Social Media API Keys
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Email Service Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# AI/ML Configuration
AI_MODEL_PATH=/app/models
AI_BATCH_SIZE=32
AI_MAX_PARALLEL=4

# Monitoring Configuration
PROMETHEUS_PUSHGATEWAY=prometheus-pushgateway:9091